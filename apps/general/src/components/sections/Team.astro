---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meet the skilled and experienced team behind our success";

import {
  default as p1,
  default as p2,
  default as p3,
  default as p4,
  default as p5,
  default as p6,
} from "../../assets/pics/profile-pic.png";

const team = [
  {
    pic: p1,
    name: "Abdulsalam Lukmon",
    role: "Founder",
    description:
      "5+ years of experience in Robotics software development. Skilled in project management and team leadership",
    link: "https://linkedin.com/in/Lukmon-Abdulsalam",
  },
  {
    pic: p3,
    name: "Makanjuola Dogban",
    role: "Co-Founder",
    description:
      "5+ years of experience in software and embedded system development.",
    link: "https://linkedin.com/in/Makanjuola-Dogban",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">See all team</button>
    </div>
  </div>
</Section>
