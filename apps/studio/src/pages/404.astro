---
import { getSettings } from "@lib/storyblokApi";
import Layout from "@layouts/Layout.astro";

const settings = await getSettings("default");

if(!settings || settings.setup) {
  return Astro.redirect("/setup");
}

const meta = {
  title: "404",
  description: "page not found",
  og_image: "",
  image: "",
};
---

<Layout meta={meta} {settings}>
  <div class="grid min-h-svh w-full place-items-center">
    <div class="richtext text-center">
      <h1>404</h1>
      <p>Page Not Found</p>
    </div>
  </div>
</Layout>
