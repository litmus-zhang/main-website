---
import {
  storyblokEditable, 
  renderRichText,
} from "@storyblok/astro";
import  Button from "@/components/ui/button/Button.vue";

interface Props {
  blok: ContactFormStoryblok;
}

const { blok } = Astro.props;
const { 
  content,
  container ,
  surface = "", 
  padding_top = "pt-lg",
  padding_bottom= "pb-lg"
} = blok;
 
const renderedRichText = renderRichText(content);
---

<div {...storyblokEditable(blok)} class={`${surface} intersection`}>
  <div class={container ? "content-grid" : ""}>
    <div class={`${container} ${padding_top} ${padding_bottom} px-1` }>
            <div set:html={renderedRichText} class={`richtext max-w-2xl text-balance`} />
            <div class="mt-6">
              <a href="mailto:hello@dynage.technology">
                <Button variant="primary" size="lg">
                  Get in touch 
                  <!-- <Icon name="arrow-right" class="ml-2" /> -->
                </Button>
              </a>
            </div>
    </div>
  </div>
</div>
